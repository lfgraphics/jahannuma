{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "react-refresh"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/stylistic",
    "plugin:import/recommended"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": ["./tsconfig.json"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // TypeScript strictness enhancements
    "@typescript-eslint/explicit-function-return-type": ["warn", { "allowExpressions": true }],
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "@typescript-eslint/consistent-type-imports": ["error", { "prefer": "type-imports", "fixStyle": "inline-type-imports" }],
    "@typescript-eslint/no-explicit-any": "warn",

    // Import ordering & hygiene
    "import/order": ["warn", {
      "groups": ["builtin", "external", "internal", ["parent", "sibling", "index"], "object", "type"],
      "newlines-between": "always",
      "alphabetize": { "order": "asc", "caseInsensitive": true }
    }],
    "import/no-unresolved": "error",
    "import/no-default-export": "off", // Next.js pages still rely on default exports

    // React 19 readiness (most legacy rules deprecated)
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",

    // Dev DX: fast refresh guard against accidental exports
    "react-refresh/only-export-components": ["warn", { "allowConstantExport": true }]
  },
  "overrides": [
    {
      "files": ["next.config.*", "postcss.config.*", "tailwind.config.*"],
      "rules": {
        "import/no-default-export": "off"
      }
    },
    {
      "files": ["app/**/page.tsx", "app/**/layout.tsx"],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
